---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedinIcon from '../components/icons/LinkedinIcon.astro';
import GithubIcon from '../components/icons/GithubIcon.astro';
import MailIcon from '../components/icons/MailIcon.astro'
import EducationIcon from '../components/icons/EducationIcon.astro';
import Education from '../components/Education.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout 
	title="Gabriel's portfolio - Web Developer"
	icon="/src/components/img/micara.jpg"
	>
	<main class="px-10">
		<section class="w-full lg:w-[740px] mx-auto pt-20 pb-20 lg:pt-60 lg:pb-40">
